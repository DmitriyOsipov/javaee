<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

  <bean name="game-board"
    class="com.hillel.game.Board">
  </bean>

  <bean name="player-pc"
    class="com.hillel.game.PlayerPc">
    <constructor-arg index="0" value="T100"/>
    <constructor-arg index="1" value="O"/>
  </bean>

  <bean name="player-human"
    class="com.hillel.game.PlayerHuman">
    <constructor-arg index="0" value="John"/>
    <constructor-arg index="1" value="X"/>
  </bean>

  <bean name="tic-tac-game"
    class="com.hillel.game.TicTacToe">
    <property name="board" ref="game-board"/>
    <property name="player1" ref="player-human"/>
    <property name="player2" ref="player-pc"/>
  </bean>

</beans>